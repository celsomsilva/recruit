{
  "extends": ["react-app", "plugin:prettier/recommended"],
  "rules": {
    "curly": ["error", "all"],
    "jsx-a11y/href-no-hash": ["off"],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreUrls": true
      }
    ],
    "no-console": ["off"],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}
